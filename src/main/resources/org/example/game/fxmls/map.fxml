            <Image url="@../images/start.jpeg" />
         </image>
      </ImageView>
      <ImageView fx:id="map" fitHeight="705.0" fitWidth="1203.0" layoutX="140.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/MiniLevel_0003_Pagras.jpg" />
         </image>
      </ImageView>
      <ImageView fitHeight="34.0" fitWidth="32.0" layoutX="171.0" layoutY="18.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/heart.png" />
         </image>
      </ImageView>
      <Label fx:id="health" layoutX="209.0" layoutY="25.0" style="-fx-text-fill: white;" text="1000">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <ImageView fitHeight="34.0" fitWidth="32.0" layoutX="272.0" layoutY="19.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/coin.png" />
         </image>
      </ImageView>
