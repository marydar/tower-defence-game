         <children>
            <JFXButton fx:id="runBtn" layoutX="795.0" layoutY="20.0" onAction="#run" prefHeight="32.0" prefWidth="44.0" />
            <JFXButton fx:id="backBtn" layoutX="729.0" layoutY="20.0" onAction="#back" prefHeight="32.0" prefWidth="44.0" />
         </children></AnchorPane>
      <JFXButton fx:id="spells" layoutX="956.0" layoutY="621.0" onAction="#spellsClick" prefHeight="45.0" prefWidth="52.0" />
   </children>
