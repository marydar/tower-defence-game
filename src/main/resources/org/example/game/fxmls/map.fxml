<AnchorPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.game.view.MapC">
   <children>
      <ImageView fitHeight="705.0" fitWidth="1201.0" layoutX="1.0" pickOnBounds="true" style="-fx-opacity: 0.3;">
